
type User {
	ID:   Int! 
	Name: String!
	Age:  Int!
}

type Order {
	ID:    Int!
	Name:  String!
	Desc:  String!
	Image: String!
}

type Query {
  users: [User!]!
  orders: [Order!]!
}

input UserInput {
  Name: String!
  Age:  Int!
}

input OrderInput {
	Name:  String!
	Desc:  String!
	Image: String!
}

type Mutation {
  createUser(input: UserInput!): User!
  createOrder(input: OrderInput!): Order!
}
